{
    "name": "emath.js",
    "version": "1.0.0",
    "description": "A math library for incremental games based on break_eternity.js",
    "main": "src/index.js",
    "unpkg": "dist/eMath.bundle.js",
    "scripts": {
        "build": "npm-run-all build:bundle build:minify",
        "build:bundle": "esbuild src/index.js --bundle --format=iife --outfile=dist/eMath.bundle.js",
        "build:minify": "esbuild src/index.js --bundle --minify --format=iife --outfile=dist/eMath.min.js",
        "test": "mocha"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xShadowBlade/emath.js.git"
    },
    "author": "xShadowBlade",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xShadowBlade/emath.js/issues"
    },
    "homepage": "https://github.com/xShadowBlade/emath.js#readme",
    "dependencies": {
        "break_eternity.js": "^1.3.1",
        "lz-string": "^1.5.0"
    },
    "devDependencies": {
        "esbuild": "0.19.4",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "mocha": "^10.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "3.0.3"
    }
}
