{
    "name": "emath.js",
    "version": "2.0.1",
    "description": "A math library for incremental games based on break_eternity.js",
    "types": "dist/eMath.d.ts",
    "main": "dist/eMath.js",
    "module": "dist/eMath.esm.js",
    "unpkg": "dist/eMath.min.js",
    "browser": "dist/eMath.bundle.js",
    "scripts": {
        "build": "run-p build:bundle build:minify build:esm build:cjs build:types",
        "build:bundle": "esbuild src/index.ts --bundle --format=iife --outfile=dist/eMath.bundle.js",
        "build:minify": "esbuild src/index.ts --bundle --minify --format=iife --outfile=dist/eMath.min.js",
        "build:esm": "esbuild src/index.ts --bundle --format=esm --outfile=dist/eMath.esm.js",
        "build:cjs": "esbuild src/index.ts --bundle --format=cjs --outfile=dist/eMath.js",
        "build:types": "tsc --emitDeclarationOnly -outfile dist/eMath.d.ts",
        "test": "mocha"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xShadowBlade/emath.js.git"
    },
    "author": "xShadowBlade",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xShadowBlade/emath.js/issues"
    },
    "homepage": "https://github.com/xShadowBlade/emath.js#readme",
    "dependencies": {
        "break_eternity.js": "^1.3.1"
    },
    "devDependencies": {
        "@types/node": "^20.8.9",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "esbuild": "0.19.5",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "mocha": "^10.2.0",
        "npm-run-all": "^4.1.5",
        "prettier": "3.0.3",
        "prettier-eslint": "^16.1.1",
        "typescript": "^5.2.2"
    }
}
