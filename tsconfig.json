{
	"compilerOptions": {
		"emitDeclarationOnly": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
		"declaration": true,
		"allowJs": true,
        "jsx": "react",
		"target": "ES2017",
		"module": "NodeNext",
		"strict": true,
		"lib": ["ESNext", "dom"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",
		"outDir": "./dist/types",
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
	  	"node_modules",
		"dist"
	]
}
