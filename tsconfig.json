{
	"compilerOptions": {
		"emitDeclarationOnly": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
		"declaration": true,
		"allowJs": true,
        "jsx": "react",
		"target": "es5",
		"module": "NodeNext",
		"strict": true, // change later
		"lib": ["ESNext", "dom"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",  // Adjust this based on your project structure
		"outDir": "./dist",  // Adjust this based on your project structure
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
	  	"node_modules",
	]
}
