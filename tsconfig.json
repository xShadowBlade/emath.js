{
	"compilerOptions": {
	  "target": "es6",
	  "module": "ESNext",
	  "strict": false, // change later
	  "lib": ["ESNext", "dom"],
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "moduleResolution": "node",
	  "baseUrl": "./src",  // Adjust this based on your project structure
	  "outDir": "./dist",  // Adjust this based on your project structure
	  "sourceMap": true
	},
	"include": [
	  "src/**/*.ts", "src/eMath.js", "src/classes/boost.ts", "src/index.js"],
	"exclude": [
	  "node_modules"
	]
}